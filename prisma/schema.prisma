generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  email           String    @db.VarChar()
  tel             String    @db.VarChar()
  accountCreated DateTime  @default(now()) @map("account_created")
  contacts        Contact[] @relation(name:"userContact") 
  @@map("user")
  
}

model Contact {
  id      Int    @id @default(autoincrement())
  name    String @db.VarChar()
  emails  String @db.VarChar()
  tel     String @db.VarChar()
  ownerId Int  @map("owner_id")
  owner   User   @relation(name: "userContact",fields: [ownerId], references: [id])
  @@map("contact")
}
